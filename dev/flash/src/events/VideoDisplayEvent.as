package src.events {		import flash.events.Event;		public class VideoDisplayEvent extends Event {				public static const VIDEO_COMPLETE = "video_complete";		public static const PLAY_PROGRESS = "play_progess";		public static const VIDEO_LOADING = "video_loading";		public static const VIDEO_ERROR = "video_error";		public static const VIDEO_LOADED = "video_loaded";		public static const VIDEO_PLAYING = "video_playing";		public static const VIDEO_PAUSED = "video_paused";		public static const META_DATA_LOADED = "meta_data_loaded";				public static const CONNECTION_MADE = "connection_made";				private var _playPercent:Number;		private var _playTotal:Number;		private var _duration:Number;				private var _loaded:Number;		private var _buffered:Number;				public function VideoDisplayEvent(type:String, pp:Number=0, pt:Number=0, bl:Number=0):void {						if (type == META_DATA_LOADED) {				_duration = pp;							} else {				_playPercent = pp;				_playTotal = pt;				_loaded = (bl/pt);				_buffered = bl;			}						super (type);		}				public function get currentDuration():Number {			return _duration;		}				public function get playPercent():Number {			return _playPercent;		}				public function get playTotal():Number {			return _playTotal;		}				public function get loaded():Number {			return _loaded;		}				public function get buffered():Number {			return _buffered;		}	}}