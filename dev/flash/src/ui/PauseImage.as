package src.ui {		import flash.display.Sprite;	import flash.display.Loader;	import flash.display.Bitmap;	import flash.net.URLRequest;	import flash.events.Event;		public class PauseImage extends Sprite {				private var ldr:Loader;		private var req:URLRequest;				private var thisHeight:Number;		private var thisWidth:Number;		private var ratio:Number;				private var _pausePic:Bitmap;		private var loaded:Boolean;				public function PauseImage(w:Number, h:Number, url:String="pause.jpg") {			loaded = false;						thisWidth = w;			thisHeight = h;			ldr = new Loader();			req = new URLRequest(url);						ldr.contentLoaderInfo.addEventListener(Event.COMPLETE, imageLoaded);			ldr.load(req);		}				private function imageLoaded(e:Event):void {			trace("INFO: PauseImage: imageLoaded");			_pausePic = ldr.content as Bitmap;			_pausePic.smoothing = true;						ratio = _pausePic.width/_pausePic.height;						addChild(_pausePic);						format();						loaded = true;						dispatchEvent(new Event(Event.COMPLETE));		}				private function format() {						trace("ratio = " + ratio + ", " + thisWidth/thisHeight);						if (thisWidth/thisHeight < ratio) {				_pausePic.width = thisWidth;				_pausePic.height = thisWidth / ratio;						} else {				_pausePic.width = thisHeight * ratio;				_pausePic.height = thisHeight;			}						_pausePic.y = (thisHeight - _pausePic.height) / 2;			_pausePic.x = (thisWidth - _pausePic.width) / 2;		}				public function set pauseWidth(num:Number):void {			thisWidth = num;			if (loaded == true) {				format();			}		}				public function get pauseWidth():Number {			return thisWidth;		}				public function set pauseHeight(num:Number):void {			thisHeight = num;			if (loaded == true) {				format();			}		}				public function get pauseHeight():Number {			return thisHeight;		}	}}