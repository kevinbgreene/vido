package src.ui {		import flash.display.Sprite;	import flash.display.Loader;	import flash.display.Bitmap;		import flash.net.URLRequest;		import flash.events.Event;	import flash.events.MouseEvent;		import src.events.VideoControllerEvent;		public class FullScreenButton extends Sprite {				private var thisWidth:Number;		private var thisHeight:Number;				private var ldr:Loader;		private var req:URLRequest;				private var upURL:String;		private var downURL:String;				private var upImage:Bitmap;		private var downImage:Bitmap;		public function FullScreenButton() {						trace("INFO: FullScreenButton: init");						buttonMode = true;						thisWidth = 30;			thisHeight = 30;						upImage = new Bitmap();			downImage = new Bitmap();						upURL = "assets/fullscreen-button.png";			downURL = "assets/normal-button.png";						ldr = new Loader();			req = new URLRequest(upURL);						ldr.contentLoaderInfo.addEventListener(Event.COMPLETE, upImageLoaded);			ldr.load(req);		}				private function upImageLoaded(e:Event):void {						trace("INFO: FullScreenButton: upImageLoaded");						upImage = ldr.content as Bitmap;			upImage.smoothing = true;						upImage.width = thisWidth;			upImage.height = thisHeight;						addChild(upImage);						ldr = new Loader();			req = new URLRequest(downURL);						ldr.contentLoaderInfo.addEventListener(Event.COMPLETE, downImageLoaded);			ldr.load(req);		}				private function downImageLoaded(e:Event):void {						trace("INFO: FullScreenButton: downImageLoaded");						downImage = ldr.content as Bitmap;			downImage.smoothing = true;						downImage.width = thisWidth;			downImage.height = thisHeight;						downImage.visible = false;						addChild(downImage);		}				public function setFull():void {			trace("FULL SCREEN");			upImage.visible = false;			downImage.visible = true;		}				public function setNormal():void {			trace("NORMAL SCREEN");			upImage.visible = true;			downImage.visible = false;		}	}}