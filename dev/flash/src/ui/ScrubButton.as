package src.ui {		import flash.display.Sprite;		import flash.events.Event;		public class ScrubButton extends Sprite {				private var thisWidth:Number;		private var thisHeight:Number;		public function ScrubButton() {						buttonMode = true;						thisWidth = 40;			thisHeight = 15;						with (graphics) {				clear();				beginFill(0xEEEEEE);				drawRect(0, 0, thisWidth, thisHeight);				endFill();			}					}				public function get buttonWidth():Number {			return thisWidth;		}	}	}